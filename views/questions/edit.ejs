<% layout("layouts/boilerplate.ejs") %>

<h1>Edit Your Question</h1>

    <form action="/questions/<%= question._id %>?_method=PATCH" method="POST">
        <label for="question">Enter Your Question : </label>
        <input type="text" name="questions[question]" title="question" value="<%= question.question %>"><br>
        <label for="description">Enter Some Description : </label>
        <input type="text" name="questions[description]" id="description" value="<%= question.description %>"><br>
        <label for="author"> Enter Your Name :</label>
        <input type="text" name="questions[author]" id="author" value="<%= question.author %>"><br>
        <button>Save Changes</button>
    </form>

    <br>
    <a href="/questions">GO back</a>